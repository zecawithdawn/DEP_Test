<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- ScalableLayout으로 기종이 달라도 위치에 맞게 배치해줌 -->

    <!-- 버튼이미지 생성 -->
    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_width="1200"
        sl:scale_base_height="720">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multiple_actions_video"
            android:background="@drawable/main_examine_bt"
            sl:scale_left="100"
            sl:scale_top="200"
            sl:scale_width="240"
            sl:scale_height="240" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="자가진단"
            sl:scale_left="40"
            sl:scale_top="460"
            sl:scale_width="360"
            sl:scale_height="60"
            sl:scale_textsize="40"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multiple_actions_sound"
            android:background="@drawable/main_sound_bt"
            sl:scale_left="480"
            sl:scale_top="200"
            sl:scale_width="240"
            sl:scale_height="240"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="음악치료"
            sl:scale_left="420"
            sl:scale_top="460"
            sl:scale_width="360"
            sl:scale_height="60"
            sl:scale_textsize="40"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multiple_actions_eye"
            android:background="@drawable/main_emdr_bt"
            sl:scale_left="860"
            sl:scale_top="200"
            sl:scale_width="240"
            sl:scale_height="240" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="안구운동"
            sl:scale_left="800"
            sl:scale_top="460"
            sl:scale_width="360"
            sl:scale_height="60"
            sl:scale_textsize="40"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/admin_button"
            android:background="#05FF0000"
            sl:scale_left="50"
            sl:scale_top="550"
            sl:scale_width="50"
            sl:scale_height="50"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>
